pipeline {
  agent {
    node {
      label 'spot-agents'
    }
  }
  environment {
        REGION = "eu-west-2"
        ECR_REPO = '997475656115.dkr.ecr.eu-west-2.amazonaws.com/podcastcontextual-prometheus-exporter-prod'
        DOCKER_BUILD_TAG = "podcastcontextual-prometheus-exporter-prod"
        BUILD_PATH = "./docker/prometheus-exporter"
        CLUSTER_NAME = "podcast-context-cluster"
        SERVICE_NAME = "podcast-context-prometheus-exporter-service"
        AS = "test"
      }
  
  stages {
    stage('Build container') {
      steps {
        sh 'cd ${BUILD_PATH} && docker build -t ${DOCKER_BUILD_TAG} .'}
      }
    
    stage('Push container'){
        steps {
          sh 'aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin 997475656115.dkr.ecr.eu-west-2.amazonaws.com'
          sh 'docker tag ${DOCKER_BUILD_TAG}:latest ${ECR_REPO}:latest'
          sh 'docker push ${ECR_REPO}:latest'
        }
      }
    stage('Update live service'){
        steps {
          sh 'aws ecs update-service --region ${REGION} --cluster "prod-${CLUSTER_NAME}" --service "prod-${SERVICE_NAME}" --force-new-deployment'

        }
      }
  }
  }


